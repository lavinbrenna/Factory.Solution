@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Certifications)
    @Html.TextBoxFor(model => model.Certifications)
    @Html.Label("License Renewal Date")
    @Html.TextBoxFor(model => model.LicenseRenewal, new { type = "date", required = "required" })
    @Html.Label("Factory Location")
    @Html.TextBoxFor(model => model.Location)

    @Html.Label("Assign to machine")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Add engineer"/>
}
<p>@Html.ActionLink("Back to engineers", "Index")</p>

