@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
   <p>@Html.LabelFor(model => model.Name)</p>
   <p>@Html.TextBoxFor(model => model.Name)</p>
   <p>@Html.LabelFor(model => model.Certifications)</p>
   <p>@Html.TextBoxFor(model => model.Certifications)</p>
   <p>@Html.Label("License Renewal Date")</p>
   <p>@Html.TextBoxFor(model => model.LicenseRenewal, new { type = "date", required = "required" })</p>
