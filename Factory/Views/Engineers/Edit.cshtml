@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Edit @Html.DisplayFor(model=> model.Name)'s Details</h4>

@using (Html.BeginForm())
{
  <p>@Html.LabelFor(model => model.Name)</p>
  <p>@Html.EditorFor(model => model.Name)</p>
  <p>@Html.LabelFor(model => model.Certifications)</p>
  <p>@Html.EditorFor(model => model.Certifications)</p>
  <p>@Html.Label("License Renewal Date")</p>
  <p>@Html.EditorFor(model => model.LicenseRenewal, new { type = "date", required = "required" })</p>
  <p>@Html.Label("Factory Location")</p>
  <p>@Html.EditorFor(model => model.Location)</p>

    <p>@Html.Label("Machine Assignment")</p>
    <p>@Html.DropDownList("MachineId")</p>

    <p><input type="submit" value="Edit engineer"/></p>
}
<p>@Html.ActionLink("Back to engineers", "Index")</p>
