@{
  Layout = "_Layout";
}
@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>
@if (@Model.Count == 0)
{
  <h3>You haven't added any Engineers to your team yet!</h3>
}
@foreach(Engineer engineer in Model)
{
  <p>@Html.ActionLink($"{engineer.Name}", "Details", new {id= engineer.EngineerId})</p>
}
<p>@Html.ActionLink("Add new engineer", "Create")</p>