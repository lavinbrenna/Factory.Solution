@{
  Layout = "_Layout";
}
@using Factory.Models;

@model List<Factory.Models.EngineerMachine>;

<h1>Repair History</h1>
@if (@Model.Count == 0)
{
  <p>No incidents have been reported yet!</p>
}
@foreach(EngineerMachine engineerMachine in Model)
{
  <p>@Html.Label($"{engineerMachine.Date.ToShortDateString()}")</p>
  <p>@Html.ActionLink($"{engineerMachine.Description}", "Details", new {id= engineerMachine.EngineerMachineId})</p>
}
<p>@Html.ActionLink("Report new incident", "Create")</p>