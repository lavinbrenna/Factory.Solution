@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)
    @Html.LabelFor(model=> model.Location)
    @Html.TextBoxFor(model=> model.Location)
    @Html.LabelFor(model => model.InspectionDate)
    @Html.TextBoxFor(model => model.InspectionDate)
    @Html.Label("Is this machine currently operating?")
    @Html.RadioButtonFor(model => model.IsOperating, "Yes")
    @Html.RadioButtonFor(model => model.IsOperating, "No")
    @Html.Label("Is this machine malfunctioning?")
    @Html.RadioButtonFor(model => model.IsMalfunctioning, "Yes")
    @Html.RadioButtonFor(model => model.IsMalfunctioning, "No")
    

    <input type="submit" value="Add new machine"/>
}
<p>@Html.ActionLink("Show all machines", "Index")</p>
