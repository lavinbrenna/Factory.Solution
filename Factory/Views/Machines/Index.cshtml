@{
  Layout = "_Layout";
}
@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>
@if (@Model.Count == 0)
{
  <p>No machines have been added yet!</p>
}
@foreach(Machine machine in Model)
{
  <p>@Html.ActionLink($"{machine.Name}", "Details", new {id= machine.MachineId})</p>
}
<p>@Html.ActionLink("Add new machine", "Create")</p>